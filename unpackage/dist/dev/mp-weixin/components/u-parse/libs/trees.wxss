}
._code {
  font-family: monospace;
}
._del {
  text-decoration: line-through;
}
._em,
._i {
  font-style: italic;
}
._h1 {
  font-size: 2em;
}
._h2 {
  font-size: 1.5em;
}
._h3 {
  font-size: 1.17em;
}
._h5 {
  font-size: 0.83em;
}
._h6 {
  font-size: 0.67em;
}
._h1,
._h2,
._h3,
._h4,
._h5,
._h6 {
  display: block;
