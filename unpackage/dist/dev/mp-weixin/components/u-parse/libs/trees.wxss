}
._image {
  display: block;
  width: 100%;
  height: 360px;
  margin-top: -360px;
  opacity: 0;
}
._ins {
  text-decoration: underline;
}
._li {
  flex: 1;
  width: 0;
}
._ol-bef {
  width: 36px;
  margin-right: 5px;
  text-align: right;
}
._ul-bef {
  display: block;
  margin: 0 12px 0 23px;
  line-height: normal;
}
._ol-bef,
